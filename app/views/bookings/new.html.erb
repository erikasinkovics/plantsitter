<h1>Confirm booking details</h1>

<p>Your plantsitter is <%= @plant_sitter.first_name %> <%= @plant_sitter.last_name %> </p>

<%= simple_form_for @booking, url: user_bookings_path(@plant_sitter), method: :post do |t| %>
  <%= t.input :start_date, as: :date %>
  <%= t.input :end_date, as: :date %>
  <%= t.button :submit %>
<% end %>

<a href="/bookings">Go back to bookings</a>
