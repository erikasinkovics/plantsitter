
<% if current_user.plant_sitter? %>
  <div class="card-product">
    <%= cl_image_tag booking.customer.photo.key,
    crop: :thumb, gravity: :face %>
    <div class="card-product-infos">
      <!-- using bootstrap to display next to eachother -->
      <div class="d-flex justify-content-between">

        <h2><%= "#{booking.customer.first_name} #{booking.customer.last_name}" %></h2>
        <div class="d-flex">
          <!-- approved & rejected buttons -->
          <!-- approve -->
          <%= link_to '<i class="fa fa-check" aria-hidden="true"></i>'.html_safe, approve_path(id: booking.id), method: :patch %>
          <!-- reject -->
          <%= link_to '<i class="fa fa-times" aria-hidden="true"></i>'.html_safe, reject_path(id: booking.id), method: :patch %>
        </div>
      </div>

      <p> <%= "#{booking.start_date} - #{booking.end_date}" %></p>
      <% if booking.status == true %>
        <p>Approved</p>
      <% elsif booking.status == false %>
        <p>Rejected</p>
      <% else %>
        <p>Pending</p>
      <% end %>

      <div class="card-link">
        <%= link_to 'BOOKING DETAILS', booking_path(booking) %>
      </div>

    </div>
  </div>


<% else %>


  <div class="card-product">
    <%= cl_image_tag booking.plant_sitter.photo.key,
    crop: :thumb, gravity: :face %>

    <div class="card-product-infos">
      <div>
        <h2><%= "#{booking.plant_sitter.first_name} #{booking.plant_sitter.last_name}" %></h2>
        <p> <%= "#{booking.start_date} - #{booking.end_date}" %></p>

        <% if booking.status == true %>
          <p>Approved</p>
        <% elsif booking.status == false %>
          <p>Rejected</p>
        <% else %>
          <p>Pending</p>
        <% end %>
      </div>

      <div>
        <%= link_to 'Booking details', booking_path(booking) %>
      </div>
    </div>
  </div>
<% end %>

